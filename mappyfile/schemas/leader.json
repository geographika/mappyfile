{
  "type": "object",
  "additionalProperties": false,
  "patternProperties": {
    "^__[a-z]+__$": true
  },
  "properties": {
    "__type__": {
      "const": "leader"
    },
    "include": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "gridstep": {
      "type": "integer"
    },
    "maxdistance": {
      "type": "integer"
    },
    "styles": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "style.json"
      }
    }
  },
  "$schema": "https://json-schema.org/draft/2020-12/schema"
}