{
  "type": "object",
  "additionalProperties": false,
  "patternProperties": {
    "^__[a-z]+__$": {}
  },
  "properties": {
    "__type__": {
      "enum": [ "leader" ]
    },
    "include": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "gridstep": {
