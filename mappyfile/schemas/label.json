{
  "type": "object",
  "additionalProperties": false,
  "patternProperties": {
    "^__[a-z]+__$": true
  },
  "properties": {
    "__type__": {
      "const": "label"
    },
    "include": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "align": {
      "oneOf": [
        {
          "type": "string",
          "enum": [
            "left",
            "center",
            "right"
          ],
          "additionalProperties": false
        },
        {
          "type": "string",
          "pattern": "^\\[(.*?)\\]$",
          "description": "attribute"
        }
      ],
      "metadata": {
        "minVersion": 5.4
      }
    },
    "angle": {
      "default": 0,
      "oneOf": [
        {
          "type": "string",
          "enum": [
            "auto",
            "auto2",
            "follow"
          ],
          "additionalProperties": false
        },
        {
          "type": "number",
          "minimum": -360,
          "maximum": 360
        },
        {
          "type": "string",
          "pattern": "^\\[(.*?)\\]$",
          "description": "attribute",
          "metadata": {
            "minVersion": 5
          }
        }
      ]
    },
    "antialias": {
      "type": "boolean",
      "default": false
    },
    "backgroundcolor": {
      "allOf": [
        {
          "$ref": "color.json"
        }
      ],
      "metadata": {
        "maxVersion": 6
      }
    },
    "backgroundshadowcolor": {
      "allOf": [
        {
          "$ref": "color.json"
        }
      ],
      "metadata": {
        "maxVersion": 6
      }
    },
    "backgroundshadowsize": {
      "default": false,
      "allOf": [
        {
          "$ref": "points.json"
        }
      ],
      "metadata": {
        "maxVersion": 6
      }
    },
    "buffer": {
      "type": "integer",
      "default": 0
    },
    "color": {
      "oneOf": [
        {
          "$ref": "color.json"
        },
        {
          "type": "string",
          "pattern": "^\\[(.*?)\\]$",
          "description": "attribute",
          "metadata": {
            "minVersion": 5
          }
        }
      ]
    },
    "encoding": {
      "type": "string",
      "metadata": {
        "maxVersion": 7.6
      }
    },
    "expression": {
      "allOf": [
        {
          "$ref": "expression.json"
        }
      ],
      "metadata": {
        "minVersion": 6.2
      }
    },
    "font": {
      "anyOf": [
        {
          "type": "string",
          "pattern": "^\\[(.*?)\\]$",
          "description": "attribute",
          "metadata": {
            "minVersion": 5.6
          }
        },
        {
          "type": "string"
        }
      ]
    },
    "force": {
      "default": false,
      "oneOf": [
        {
          "type": "boolean"
        },
        {
          "const": "group",
          "metadata": {
            "minVersion": 6.2
          }
        }
      ]
    },
    "maxlength": {
      "type": "integer",
      "metadata": {
        "minVersion": 5.4
      }
    },
    "maxoverlapangle": {
      "default": 22.5,
      "type": "number",
      "minimum": 0,
      "maximum": 360,
      "metadata": {
        "minVersion": 6
      }
    },
    "maxscaledenom": {
      "type": "number",
      "minimum": 0,
      "metadata": {
        "minVersion": 5.4
      }
    },
    "maxsize": {
      "type": "integer",
      "default": 256
    },
    "mindistance": {
      "type": "integer"
    },
    "minfeaturesize": {
      "oneOf": [
        {
          "const": "auto"
        },
        {
          "type": "integer"
        }
      ]
    },
    "minscaledenom": {
      "type": "number",
      "minimum": 0,
      "metadata": {
        "minVersion": 5.4
      }
    },
    "minsize": {
      "type": "integer",
      "default": 4
    },
    "offset": {
      "default": [
        0,
        0
      ],
      "oneOf": [
        {
          "type": "array",
          "items": {
            "type": "number"
          },
          "minItems": 2,
          "maxItems": 2
        },
        {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^\\[(.*?)\\]$",
            "description": "attribute"
          },
          "minItems": 2,
          "maxItems": 2,
          "metadata": {
            "minVersion": 7.6
          }
        }
      ]
    },
    "outlinecolor": {
      "oneOf": [
        {
          "$ref": "color.json"
        },
        {
          "type": "string",
          "pattern": "^\\[(.*?)\\]$",
          "description": "attribute",
          "metadata": {
            "minVersion": 5
          }
        }
      ]
    },
    "outlinewidth": {
      "type": "integer",
      "default": 1
    },
    "partials": {
      "type": "boolean",
      "default": false
    },
    "position": {
      "default": "cc",
      "oneOf": [
        {
          "const": "auto"
        },
        {
          "$ref": "position.json"
        },
        {
          "type": "string",
          "pattern": "^\\[(.*?)\\]$",
          "description": "attribute"
        }
      ]
    },
    "priority": {
      "default": 1,
      "minimum": 1,
      "maximum": 10,
      "anyOf": [
        {
          "type": "integer"
        },
        {
          "type": "string",
          "pattern": "^\\[(.*?)\\]$",
          "description": "attribute"
        },
        {
          "allOf": [
            {
              "$ref": "expression.json"
            }
          ],
          "metadata": {
            "minVersion": 8.2
          }
        }
      ],
      "metadata": {
        "minVersion": 5
      }
    },
    "repeatdistance": {
      "type": "integer",
      "default": 0,
      "metadata": {
        "minVersion": 5.6
      }
    },
    "shadowcolor": {
      "$ref": "color.json"
    },
    "shadowsize": {
      "default": [
        1,
        1
      ],
      "oneOf": [
        {
          "type": "array",
          "items": {
            "type": "integer"
          },
          "minItems": 2,
          "maxItems": 2
        },
        {
          "type": "array",
          "prefixItems": [
            {
              "type": "integer"
            },
            {
              "type": "string",
              "pattern": "^\\[(.*?)\\]$",
              "description": "attribute"
            }
          ],
          "minItems": 2,
          "maxItems": 2,
          "metadata": {
            "minVersion": 6
          }
        }
      ]
    },
    "size": {
      "default": 10,
      "anyOf": [
        {
          "type": "integer"
        },
        {
          "type": "string",
          "enum": [
            "tiny",
            "small",
            "medium",
            "large",
            "giant"
          ],
          "additionalProperties": false
        },
        {
          "type": "string",
          "pattern": "^\\[(.*?)\\]$",
          "description": "attribute",
          "metadata": {
            "minVersion": 5
          }
        },
        {
          "allOf": [
            {
              "$ref": "expression.json"
            }
          ],
          "metadata": {
            "minVersion": 7.6
          }
        }
      ]
    },
    "styles": {
      "type": "array",
      "items": {
        "$ref": "style.json"
      }
    },
    "text": {
      "oneOf": [
        {
          "$ref": "expression.json"
        }
      ],
      "metadata": {
        "minVersion": 6.2
      }
    },
    "type": {
      "type": "string",
      "enum": [
        "bitmap",
        "truetype"
      ],
      "additionalProperties": false
    },
    "wrap": {
      "type": "string",
      "minLength": 1,
      "maxLength": 1
    }
  },
  "$schema": "https://json-schema.org/draft/2020-12/schema"
}